<h1><strong>Books</strong></h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
	</thead>
	<tobody>
		<% @books.each do |book| %>
			<tr>
				<td>
					<%= book.title %>
				</td>
			</tr>
			<tr>
				<td>
					<%= book.body %>
				</td>
			<td>
				<%= link_to 'show', show_books_path(book.id) %>
			</td>
			</tr>
		<% end %>
	</tobody>
</table>

<%= form_for(@books, url: '/books') do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
<% end %>
